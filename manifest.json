{
    "name": "Lepsza gazeta.pl",
    "version": "1.0.5",
    "description": "Ulepszony interfejs galerii zdjęć na Gazeta.pl i deser.pl. Wszystkie zdjęcia wyświetlają się na jednej stronie.",
    "page_action": {
        "default_title": "Galeria Gazeta.pl"
    },
    "permissions": [
        "tabs"
    ],
    "incognito": "spanning",
	"content_security_policy": "default-src 'self' 'unsafe-inline'",
    "icons": {
        "16": "icon_16.jpg",
        "48": "icon_48.jpg",
        "128": "icon_128.jpg"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*.gazeta.pl/*",
                "http://*.tokfm.pl/*",
                "http://deser.pl/*",
                "http://sport.pl/*",
                "http://wyborcza.pl/duzy_kadr/*",
                "http://*.gazetadom.pl/*"
            ],
            "js": [
                "jquery-1.7.1.min.js",
                "contentscript.js"
            ],
            "run_at": "document_idle",
            "all_frames": true
        }
    ]
}
